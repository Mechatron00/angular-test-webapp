{
  "hosting": [
    {
      "target": "production",
      "public": "dist/my-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "staging",
      "public": "dist/my-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "dev",
      "public": "dist/my-app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ],

  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
